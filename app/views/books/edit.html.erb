<div class="col-6 center">
  <h1>Edit Book Info</h1>
  <%= simple_form_for @book do |f| %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :genre %>
    <%= f.input :classification, label: "Classification (Fiction/Nonfiction/etc)" %>
    <%= f.input :year %>
    <br />
    <br />
    <%= link_to 'Remove Book', Book.find(@book.id).destroy %>
    <br />
    <br />
    <%= f.submit 'Edit Book', class: 'btn btn-danger' %>
  <% end %>
</div>
