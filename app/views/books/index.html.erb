<%= form_tag(books_path, method: :get) do %>
  <%= text_field_tag :term %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<% for book in @books %>
  <div>
    <h1> <%= book.title %></h1>
    <h6>- <%= book.author %></h6>
    <h6>- <%= book.genre %></h6>
    <h6>- <%= book.classification %></h6>
    <h6>- <%= book.year %></h6>
    <h6> <%= link_to 'Edit Book', edit_book_path(book.id) %> </h6>
  </div>
  <hr />
<% end %>
