<div class="booyah-box col-10 offset-1">

  <%= form_tag(authors_path, method: :get) do %>
    <%= text_field_tag :term %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>

  <% @authors.each  do | author | %>
    <div>
      <h1> <%= link_to "#{author.first_name} #{author.last_name}", author_path(author) %></h1>
    </div>
    <hr />
  <% end %>

</div>
